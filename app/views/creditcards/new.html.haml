- @page_title = 'クレジットカード情報入力'
- breadcrumb :cardcreate

= content_for :header do
  = render 'shared/header'
= content_for :app_banner do
  = render 'shared/app-banner'
= content_for :footer do
  = render 'shared/footer'
= content_for :sell_btn do
  = render 'shared/sell-btn'

.mypage-container
  .content
    %section.content__wrap
      %h2.content__title クレジットカード情報入力

      .content__body.card-registration
        = form_with url: mypage_cards_path, method: :post, html: { name: "inputForm" }, class: 'card-form', id: 'card_form' do |f|
          .content__inner
            .card-form__group
              = render 'creditcards/card-form/card-number', f: f

            .card-form__group
              = render 'creditcards/card-form/expire', f: f

            .card-form__group
              = render 'creditcards/card-form/cvc', f: f

            .card-form__group#card_token
              = f.submit '追加する', class: 'btn-default btn-red', id: 'token_submit'

  = render 'shared/sidebar-mypage'