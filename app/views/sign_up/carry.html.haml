- @page_title = 'お届け先住所入力'

= content_for :footer do
  = render 'shared/footer-exhibit'

%header.signup-header
  %h1
    = link_to root_path do
      = image_tag "mercari-logo.svg", alt: "mercari"
  %nav.signup-header__progress-bar
    %ol.clearfix
      %li.through
        会員情報
        .signup-header__progress-status
      %li.through
        電話番号認証
        .signup-header__progress-status
      %li.active
        お届け先住所入力
        .signup-header__progress-status
      %li
        支払い方法
        .signup-header__progress-status
      %li
        完了
        .signup-header__progress-status

%main.main
  %section.main__container
    %h2.main__head.registration お届け先住所入力
    = form_with urls: '#', method: "post" ,class: 'main__inne registration-form' do |f|
      .signup-content
        .form-group
          %label{for: "name"}
          %b お名前
          %span.form-require 必須
          %input.input-default{name: "family_name", placeholder: "例) 山田", type: "text", value: ""}/
          %input.input-default{name: "first_name", placeholder: "例) 彩", type: "text", value: ""}/
        .form-group
          %label{for: "name"}
          %b お名前カナ
          %span.form-require 必須
          %input.input-default{name: "family_name_kana", placeholder: "例) ヤマダ", type: "text", value: ""}/
          %input.input-default{name: "first_name_kana", placeholder: "例) アヤ", type: "text", value: ""}/
        .form-group
          %label{for: "zip_code1"}
          %b 郵便番号
          %span.form-require 必須
          %input.input-default{"data-region": "jp", maxlength: "8", name: "zip_code1", pattern: "\\d{3}-\\d{4}", placeholder: "例) 123-4567", type: "text", value: ""}/
        .form-group
          %label{for: "prefecture"}
          %b 都道府県
          %span.form-require 必須
          .select-wrap
            .icon-arrow-bottom
              %i.fa.fa-angle-down
            = f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "--"
        .form-group
          %label{for: "city"}
          %b 市区町村
          %span.form-require 必須
          %input.input-default{name: "city", placeholder: "例) 横浜市緑区", type: "text", value: ""}/
        .form-group
          %label{for: "address1_label"}
          %b 番地
          %span.form-require 必須
          %input.input-default{name: "address1", placeholder: "例) 青山1−1−1", type: "text", value: ""}/
        .form-group
          %label{for: "address2_label"}
          %b 建物名
          %span.form-arbitrary 任意
          %input.input-default{name: "address2", placeholder: "例) 柳ビル103", type: "text", value: ""}/
        .form-group
          %label{for: "address2_label"}
          %b 電話
          %span.form-arbitrary 任意
          %input.input-default{name: "telephone", placeholder: "例) 09012345678", type: "number", value: ""}/
        = link_to "次へ進む", payment_registration_path, class: "btn-default btn-red"
        -# %button.btn-default.btn-red{type: "submit"} 次へ進む
